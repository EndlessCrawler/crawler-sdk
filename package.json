{
	"name": "@avante/crawler-sdk",
	"version": "0.0.1",
	"description": "Endless Crawler SDK Monorepo",
	"author": "Studio Avante",
	"license": "CC0-1.0",
	"homepage": "https://github.com/EndlessCrawler",
	"private": false,
	"bugs": {
		"url": "https://github.com/EndlessCrawler/crawler-sdk/issues"
	},
	"scripts": {
		"install": "npx lerna exec npm install",
		"update": "npx lerna exec \"npm update --save\"",
		"build": "npx lerna run build",
		"test": "npx lerna run test",
		"graph": "npx nx graph",
		"watch": " npx lerna watch --scope=\"@avante/crawler-data\" -- npx lerna run build --scope=\\$LERNA_PACKAGE_NAME",
		"explorer": "npx lerna run dev --scope=@avante/crawler-explorer"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"lerna": "^7.1.5"
	},
	"keywords": [
		"dungeon",
		"crawler",
		"generative",
		"composable",
		"on-chain",
		"web3",
		"game"
	]
}