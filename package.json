{
	"name": "@avante/crawler-sdk",
	"version": "0.0.1",
	"description": "Endless Crawler SDK Monorepo",
	"author": "Studio Avante",
	"license": "CC0-1.0",
	"homepage": "https://github.com/EndlessCrawler",
	"private": false,
	"bugs": {
		"url": "https://github.com/EndlessCrawler/crawler-sdk/issues"
	},
	"scripts": {
		"_install": "npx lerna exec npm install",
		"_update": "npx lerna exec \"npm update --save\"",
		"_test": "npx lerna run test",
		"_clean": "npx lerna run clean --scope=\"@avante/crawler-data\" --scope=\"@avante/crawler-api\"",
		"_build": "npx lerna run build --scope=\"@avante/crawler-data\" --scope=\"@avante/crawler-api\"",
		"watch": " npx lerna watch --scope=\"@avante/crawler-data\" --scope=\"@avante/crawler-api\" -- npx lerna run build --scope=\\$LERNA_PACKAGE_NAME",
		"watchtest": " npx lerna watch --scope=\"@avante/crawler-data\" --scope=\"@avante/crawler-api\" -- npx lerna run build,test --scope=\\$LERNA_PACKAGE_NAME",
		"graph": "npx nx graph"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"lerna": "^7.2.0"
	},
	"keywords": [
		"dungeon",
		"crawler",
		"generative",
		"composable",
		"on-chain",
		"game",
		"web3",
		"erc-721",
		"nft"
	]
}
